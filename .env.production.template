# .env.production - Production Environment Template
# Copy this file to .env and update with your actual production values

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=Fast-Claim
APP_ENV=production
APP_DEBUG=false
APP_URL=http://fast-claim.klinikbukitraya.or.id/
APP_TIMEZONE=Asia/Jakarta

# Localization
APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID

# ============================================
# SECURITY - GENERATE NEW KEYS!
# ============================================
# Run: php artisan key:generate --show
APP_KEY=base64:REPLACE_WITH_GENERATED_KEY

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Use MySQL or PostgreSQL for production
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=kubr_claim_production
DB_USERNAME=kubr_claim_user
DB_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# ============================================
# SESSION & CACHE
# ============================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=redis
CACHE_PREFIX=kubr_claim

# ============================================
# QUEUE CONFIGURATION
# ============================================
QUEUE_CONNECTION=redis

# ============================================
# PDF PROCESSING
# ============================================
# Linux: /usr/bin/pdftotext
# Windows: C:\Program Files\poppler\bin\pdftotext.exe
PDFTOTEXT_PATH=/usr/bin/pdftotext

# ============================================
# FOLDER PATHS (Network Shares)
# ============================================
# Linux mounted network shares
FOLDER_BACKUP="/mnt/backup/klaim-reguler-bpjs"
FOLDER_SHARED="/mnt/shared/klaim-reguler-bpjs"

# Windows network shares (if using Windows server)
# FOLDER_BACKUP="\\\\server\\backup\\klaim-reguler-bpjs"
# FOLDER_SHARED="\\\\server\\shared\\klaim-reguler-bpjs"

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ============================================
# MAIL CONFIGURATION
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-domain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@your-domain.com
MAIL_PASSWORD=YOUR_MAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# PERFORMANCE
# ============================================
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ============================================
# FILESYSTEM
# ============================================
FILESYSTEM_DISK=local

# ============================================
# BROADCAST
# ============================================
BROADCAST_CONNECTION=log

# ============================================
# AWS (If using S3 for file storage)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# MAINTENANCE MODE
# ============================================
APP_MAINTENANCE_DRIVER=file

# ============================================
# VITE
# ============================================
VITE_APP_NAME="${APP_NAME}"
